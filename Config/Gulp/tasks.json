{
    "main": ["browserSyncWebpack","watch"],
    "used": [
        "webpack", "webpack-watch", "jshint", "panini", "watch","browserSyncWebpack","reload"
    ],
    "tasks": {
        "webpack": {
            "module": "webpack",
            "dependencies": [],
            "args": {
                "watch": false
            }
        },
        "webpack-watch": {
            "module": "webpack",
            "dependencies": [],
            "args": {
                "task": "webpackWatch"
            }
        },
        "watch": {
            "module": "gulpwatch",
            "dependencies": [],
            "args": {
                "tasks": [{
                    "tasks": ["reload"],
                    "path": "{{config.get('common','themePath')}}\\**\\*.{html,htm}"
                }]
            }
        },
        "jshint": {
            "module": "jshint",
            "dependencies": []
        },
        "panini": {
            "module": "panini",
            "dependencies": []
        },
        "browserSyncWebpack": {
            "module": "browserSyncWebpack",
            "dependencies": []
        },
        "reload": {
            "module": "reload",
            "dependencies": []
        }
    }
}
{
    "main": ["watch","webpack-dev-server"],
    "used": [
        "webpack", "webpack-watch", "webpack-dev-server", "jshint", "panini", "watch"
    ],
    "tasks": {
        "webpack": {
            "module": "webpack",
            "dependencies": [],
            "args": {
                "watch": false
            }
        },
        "webpack-watch": {
            "module": "webpack",
            "dependencies": [],
            "args": {
                "task": "webpackWatch"
            }
        },
        "webpack-dev-server": {
            "module": "webpack",
            "dependencies": [],
            "args": {
                "task": "webpackDevServer"
            }
        },
        "watch": {
            "module": "gulpwatch",
            "dependencies": ["panini"],
            "args": {
                "tasks": [{
                    "tasks": ["panini"],
                    "path": "{{config.get('common','appPath')}}\\src\\html\\**\\*.html"
                }]
            }
        },
        "jshint": {
            "module": "jshint",
            "dependencies": []
        },
        "panini":{
            "module":"panini",
            "dependencies":[]
        }
    }
}